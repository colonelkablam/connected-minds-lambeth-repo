<h2>Add New Activity</h2>

<form action="/manage-activity/add" method="POST">
  <label for="name">Activity Name:</label>
  <input type="text" id="name" name="name" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea>

  <label for="venue">Venue ID:</label>
  <input type="number" id="venue" name="venue" required>

  <label for="provider">Provider ID:</label>
  <input type="number" id="provider" name="provider" required>

  <label for="cost">Cost:</label>
  <input type="text" id="cost" name="cost" required>

  <button type="submit">Add Activity</button>
</form>