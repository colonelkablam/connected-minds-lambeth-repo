<!-- Heading -->

<div class="top-header-container">
  <div class="branding">
    <h1>Connected Minds Lambeth</h1>
  </div>
  
  <!-- Login Button -->
  <div class="user-log-in-container">
  <% if (user) { %>
    <p class="user-welcome">logged in as : <span class="user-name"><%= user.username %> - <%= user.role %></span></p>
    <a href="#" id="logout-button" data-modal="logout" class="user-log-in">Log Out</a>
  <% } else { %>
    <p class="user-welcome">logged in as : <span class="user-name">guest</span></p>
    <a href="#" id="login-button" data-modal="login" class="user-log-in">Log in</a>
  <% } %>
  </div>
</div>

<!-- Nav bar -->
<nav class="navbar">
  <a href="<%= baseUrl %>/">Search Activities</a>
  <% if (user) { %>
    <% if (user.role === 'supa_admin') { %>
      <a href="<%= baseUrl %>/manage-users/add">Add User</a>
      <% } %>
    <% if (user.role === 'supa_admin' || user.role === 'admin') { %>
      <a href="<%= baseUrl %>/manage-activity/add">Add Activity</a>
      <% } %>
  <% } %>
</nav>

<!-- Include the modal partial -->
<%- include("./modal.ejs") %>