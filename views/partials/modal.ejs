<!-- Generic Modal -->
<div id="generic-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2 id="modal-heading">Modal Title</h2>
    <p id="modal-message">&nbsp;</p>
    
    <!-- Form Container (Optional) -->
    <form id="modal-form" style="display: none;">
      <div id="modal-inputs"></div>
      <button type="submit" id="modal-submit-button">Submit</button>
    </form>

    <!-- Action Buttons (For confirmations) -->
    <div id="modal-actions" style="display: none;">
      <button id="modal-confirm-button">Confirm ✔️</button>
      <button id="modal-cancel-button">Cancel ❌</button>
    </div>
  </div>
</div>
