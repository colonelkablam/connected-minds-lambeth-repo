<!-- Generic Modal -->
<div id="genericModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2 id="modalHeading">Modal Title</h2>
    <p id="modalMessage"></p>
    
    <!-- Form Container (Optional) -->
    <form id="modalForm" style="display: none;">
      <div id="modalInputs"></div>
      <button type="submit" id="modalSubmitButton">Submit</button>
    </form>

    <!-- Action Buttons (For confirmations) -->
    <div id="modalActions" style="display: none;">
      <button id="modalConfirmButton">Confirm</button>
      <button id="modalCancelButton">Cancel</button>
    </div>
  </div>
</div>
