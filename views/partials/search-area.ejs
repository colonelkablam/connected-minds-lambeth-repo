<div class="search-container">

  <form id="search-form" method="POST" class="search-form">
    
    <!-- Search Text Input -->
    <div class="search-input">
      <input
        type="text"
        name="searchText"
        id="searchText"
        placeholder="Search for activities..."
      />
      <button class="clear-search-text" title="Clear Search Text" onclick="clearSearch(event)">X</button>
      <span class="search-buttons-box">
        <button type="submit" class="search" id="searchButton">Search</button>
        <button type="button" class="see-all" id="seeAllButton">See All</button>
      </span>

    </div>

    <!-- Filters Section -->
    <div class="filters-container">

      <div class="filter-options-box">
        <span class="filter-item">
          <input
            type="checkbox"
            id="filters-enabled"
            name="filtersEnabled"
            value="true"
          />
          <label for="filters-enabled">Enable Filters</label>
        </span>
      </div>

      <!-- Hideable search filters panel -->
      <div id="filters-panel" class="filters-panel hidden">

        <!-- Day of the Week -->
        <div class="filter-section">
          <h4>Day of the Week</h4>
          <div class="filter-checkboxes">
            <% ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].forEach(day => { %>
                <input
                  type="checkbox"
                  id="day-<%= day.toLowerCase() %>"
                  name="filterDays"
                  value="<%= day.toLowerCase() %>"
                />
                <label for="day-<%= day.toLowerCase() %>"><%= day %></label>
                <% }); %>
          </div>
        </div>

        <!-- Audience -->
        <div class="filter-section">
          <h4>Audience</h4>
          <div class="filter-checkboxes">
            <% ['Children', 'Youth', 'Adults', 'Families', 'Everyone'].forEach(audience => { %>
                <input
                  type="checkbox"
                  id="audience-<%= audience.toLowerCase() %>"
                  name="filterAudience"
                  value="<%= audience.toLowerCase() %>"
                />
                <label for="audience-<%= audience.toLowerCase() %>"><%= audience %></label>
            <% }); %>
          </div>
        </div>

        <!-- Cost -->
        <div class="filter-section">
          <h4>Cost</h4>
          <div class="filter-checkboxes">
            <% ['Free', 'Low Cost', 'Other'].forEach(cost => { %>
                <input
                  type="checkbox"
                  id="cost-<%= cost.toLowerCase() %>"
                  name="filterCost"
                  value="<%= cost.toLowerCase() %>"
                />
                <label for="cost-<%= cost.toLowerCase() %>"><%= cost %></label>
            <% }); %>
          </div>
        </div>
        
      </div>
    </div>
  </form>
</div>
