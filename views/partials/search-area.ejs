<div class="search-container">

  <form id="search-form" method="POST" class="search-form">
    
    <!-- Search Text Input -->
    <div class="search-input">
      <input
        type="text"
        name="searchText"
        placeholder="Search for activities..."
        value="<%= searchData.searchText %>"
      />
      <button type="submit">Search</button>
    </div>

    <!-- Filters Section -->
    <div class="filters-container">

      <div class="filter-options-box">
        <span class="filter-item">
          <input
            type="checkbox"
            id="filtersEnabled"
            name="filtersEnabled"
            value="true"
            <%= searchData.filtersEnabled ? 'checked' : '' %>
          />
          <label for="filtersEnabled">Filters Enabled</label>
        </span>
      </div>

      <!-- Hideable search filters panel -->
      <div id="filters-panel" class="filters-panel <%= searchData.filtersEnabled ? '' : 'hidden' %>">

        <!-- Day of the Week -->
        <div class="filter-section">
          <h4>Day of the Week</h4>
          <div class="filter-checkboxes">
            <% ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].forEach(day => { %>
                <input
                  type="checkbox"
                  id="day-<%= day.toLowerCase() %>"
                  name="filterDays"
                  value="<%= day.toLowerCase() %>"
                  <%= searchData.filterDays.includes(day.toLowerCase()) ? 'checked' : '' %>
                />
                <label for="day-<%= day.toLowerCase() %>"><%= day %></label>
                <% }); %>
          </div>
        </div>

        <!-- Audience -->
        <div class="filter-section">
          <h4>Audience</h4>
          <div class="filter-checkboxes">
            <% ['Children', 'Youth', 'Adults', 'Families', 'Everyone'].forEach(audience => { %>
                <input
                  type="checkbox"
                  id="audience-<%= audience.toLowerCase() %>"
                  name="filterAudience"
                  value="<%= audience.toLowerCase() %>"
                  <%= searchData.filterAudience.includes(audience.toLowerCase()) ? 'checked' : '' %>
                />
                <label for="audience-<%= audience.toLowerCase() %>"><%= audience %></label>
            <% }); %>
          </div>
        </div>

        <!-- Cost -->
        <div class="filter-section">
          <h4>Cost</h4>
          <div class="filter-checkboxes">
            <% ['Free', 'Low Cost', 'Other'].forEach(cost => { %>
                <input
                  type="checkbox"
                  id="cost-<%= cost.toLowerCase() %>"
                  name="filterCost"
                  value="<%= cost.toLowerCase() %>"
                  <%= searchData.filterCost.includes(cost.toLowerCase()) ? 'checked' : '' %>
                />
                <label for="cost-<%= cost.toLowerCase() %>"><%= cost %></label>
            <% }); %>
          </div>
        </div>

        <!-- Distance Slider -->
        <div class="filter-section">
          <h4>Distance</h4>
          <div class="slider-container">
            <input
              type="range"
              name="distance"
              id="distance-slider"
              min="0.2"
              max="12"
              step="0.2"
              value="<%= searchData.distance %>"
            />
            <label for="distance-slider"><%= searchData.distance %> miles</label>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
