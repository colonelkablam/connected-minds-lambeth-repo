<div class="found-activities-container">
  <div class="tabs">
    <button class="tab-btn active" id="cards-tab" onclick="showTab('cards')">Cards</button>
    <button class="tab-btn" id="pinned-tab" onclick="showTab('pinned')">
      Pinned
      <span id="pinned-numbers" style="display: none;"></span>
    </button>
    <button class="tab-btn clear-pins" onclick="clearPins('pinned')">Clear Pins</button>
  </div>

  <!-- Search Results Container (Days Tab) -->
  <div id="cards-container">
    <ul class="activity-list" id="search-results">
      <p>Search for activities...</p>
    </ul>
  </div>

  <!-- Pinned Activities Container (Initially Hidden) -->
  <div id="pinned-container" style="display: none;">
    <ul class="activity-list" id="pinned-activities">
      <p>No pinned activities.</p>
    </ul>
  </div>
</div>
