<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="container">
      <header>
        <%- include('../partials/header.ejs', { user: user || null }) %>
      </header>

      <!-- Flash Messages Wrapper (Always Exists to Prevent Layout Shift) -->
      <div id="flashMessages">
        <% if (flash.success) { %>
          <div class="flash-message success">
            <%= flash.success %>
          </div>
        <% } %>
        
        <% if (flash.error) { %>
          <div class="flash-message error">
            <%= flash.error %>
          </div>
        <% } %>
      </div>

      <main>
        <%- include('../partials/search-area.ejs', { searchData }) %>
        <%- include('../partials/found-activities.ejs', { activities }) %>
      </main>
      
      <footer>
        <%- include('../partials/footer.ejs') %>
      </footer>
    </div>
</body>

</html>
